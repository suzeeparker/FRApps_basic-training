{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open Chrome",
      "type": "process",
      "command": "chrome.exe",
      "windows": {
        "command": "${config:chrome.executable}"
      },
      "args": [
        "${file}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Open Docs",
      "type": "shell",
      "command": "docsify",
      "args": [
        "serve",
        "docs",
        "-o=true",
        "-p=${config:docsify.port}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "Open App Doc",
      "type": "process",
      "command": "node",
      "args": [
        "${workspaceFolder}/_3/NJSs/openAppDocsPage.njs",
        "${fileDirname}"
      ]
    },
    {
      "label": "Open in TextPad",
      "type": "process",
      "command": "node",
      "args": [
        "${workspaceFolder}/_3/NJs/openInTextPad.njs",
        "${file}"
      ],
      "problemMatcher": []
    },
    {
      "label": "Save FormR Model Scripts",
      "type": "process",
      "command": "node",
      "args": [
        "${workspaceFolder}/_3/NJSs/saveModelScripts.njs",
        "${input:DBSN}"
      ]
    }
  ]
, "inputs": [
        {
            "id": "DBSN",
            "description": "Enter a DBSN:",
            "default": "MySQL_AWS_IO",
            "type": "promptString"
        },
    ]
}